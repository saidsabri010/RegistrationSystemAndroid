<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/myimage"
        android:layout_width="wrap_content"
        android:layout_height="226dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:src="@mipmap/ic_login" />

    <EditText
        android:id="@+id/email"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myimage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:background="#FFFFFF"
        android:fontFamily="serif"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="104dp"
        android:layout_height="35dp"
        android:layout_below="@+id/myimage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="58dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="249dp"
        android:layout_marginRight="249dp"
        android:text="Email :"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/password"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="233dp"
        android:layout_marginRight="233dp"
        android:text="Password :"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="322dp"
        android:layout_height="46dp"
        android:layout_below="@+id/password"
        android:id="@+id/pssedit"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="60dp"
        android:textSize="24sp"
        android:layout_marginRight="60dp"
        android:hint="Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pssedit"
        android:layout_centerInParent="true"
        android:id="@+id/signupbtn"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif-black"
        android:text="SIGN IN"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't you have an account! sign up here"
        android:layout_below="@id/signupbtn"
        android:layout_centerInParent="true"
        android:layout_marginTop="23dp"
        android:textSize="23dp"
        />


</RelativeLayout>